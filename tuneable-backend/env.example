# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/tuneable

# JWT Secret
JWT_SECRET=your-secret-key-here

# Session Secret
SESSION_SECRET=your-session-secret-here

# Stripe Keys - Test Mode (for wallet top-ups)
STRIPE_SECRET_KEY_TEST=sk_test_...
STRIPE_PUBLISHABLE_KEY_TEST=pk_test_...
STRIPE_WEBHOOK_SECRET_TEST=whsec_...

# Stripe Keys - Live Mode (for share purchases/funding)
# Only set these in production!
STRIPE_SECRET_KEY_LIVE=sk_live_...
STRIPE_PUBLISHABLE_KEY_LIVE=pk_live_...
STRIPE_WEBHOOK_SECRET_LIVE=whsec_...

# Legacy support (falls back to test mode if _TEST not set)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Google Maps API (for location features)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# YouTube API
YOUTUBE_API_KEY=your-youtube-api-key

# Spotify API (REMOVED - no longer using Spotify integration)
# SPOTIFY_CLIENT_ID=your-spotify-client-id
# SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# Facebook OAuth (optional)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:8000/api/auth/google/callback

# Instagram OAuth (optional)
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

# SoundCloud OAuth (optional)
SOUNDCLOUD_CLIENT_ID=your-soundcloud-client-id
SOUNDCLOUD_CLIENT_SECRET=your-soundcloud-client-secret

# ============================================
# RESEND EMAIL SERVICE
# ============================================
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# Email sender address
# Use onboarding@resend.dev for testing (works immediately)
# After verifying tuneable.stream domain in Resend, change to:
# EMAIL_FROM=notifications@tuneable.stream
EMAIL_FROM=onboarding@resend.dev

# Admin email to receive notifications
ADMIN_EMAIL=mostlymisguided@icloud.com

# Frontend URL for links in emails
# IMPORTANT: In production, set this to your production frontend URL!
# Example: FRONTEND_URL=https://tuneable.stream
FRONTEND_URL=http://localhost:5173

# ============================================
# CLOUDFLARE R2 STORAGE
# ============================================
# Get credentials from: Cloudflare Dashboard → R2 → Manage R2 API Tokens
R2_ENDPOINT=https://[your-account-id].r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=tuneable-uploads
R2_PUBLIC_URL=https://uploads.tuneable.stream

# If R2 is not configured, uploads will fall back to local filesystem
# Local uploads work for development but are lost on Render restarts

# Environment
NODE_ENV=development

# ============================================
# TAG PARTY CONFIGURATION
# ============================================
# Minimum number of media items with a tag before creating a tag party
# Default: 3 (if not set)
TAG_PARTY_THRESHOLD=3

# ============================================
# LOCATION PARTY CONFIGURATION
# ============================================
# Minimum number of users required before creating a location party
# Defaults: city=3, region=5, country=10 (if not set)
LOCATION_PARTY_CITY_THRESHOLD=3      # City-level parties (e.g., "London Party")
LOCATION_PARTY_REGION_THRESHOLD=5    # Region-level parties (e.g., "Norfolk Party")
LOCATION_PARTY_COUNTRY_THRESHOLD=10 # Country-level parties (e.g., "United Kingdom Party")

